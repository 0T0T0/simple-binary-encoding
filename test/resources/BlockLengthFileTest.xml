<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<messageSchema package="SBE tests"
               semanticVersion="5.2"
               description="Unit Test"
               byteOrder="littleEndian">
    <types>
        <composite name="messageHeader" description="Template ID and length of message root" fixUsage="Length">
            <type name="blockLength" primitiveType="uint16"/>
            <type name="templateId" primitiveType="uint16"/>
            <type name="version" primitiveType="uint8"/>
            <type name="reserved" primitiveType="uint8"/>
        </composite>
        <composite name="groupSize" fixUsage="NumInGroup">
            <type name="blockLength" primitiveType="uint16"/>
            <type name="numInGroup" primitiveType="uint8"/>
        </composite>
        <type name="rawData" primitiveType="char" fixUsage="data" variableLength="true"/>
        <type name="length" primitiveType="uint8" fixUsage="Length" maxValue="200"/>
    </types>

    <!-- no blockLength set for message nor group -->
    <message name="Message1" id="1">
        <field name="header" id="41" type="messageHeader"/>
        <field name="Group Dimensions" id="1" type="groupSize" groupName="Group"/>
        <group name="Group">
            <field name="F1" id="10" type="uint32" fixUsage="int"/>
            <field name="F2" id="11" type="uint64" fixUsage="int"/>
        </group>
    </message>

    <!-- blockLength set for message -->
    <message name="Message2" id="2" blockLength="64">
        <field name="header" id="41" type="messageHeader"/>
        <field name="Group Dimensions" id="1" type="groupSize" groupName="Group"/>
        <group name="Group">
            <field name="F1" id="10" type="uint32" fixUsage="int"/>
            <field name="F2" id="11" type="uint64" fixUsage="int"/>
        </group>
    </message>

    <!-- blockLength set for group -->
    <message name="Message3" id="3" blockLength="64">
        <field name="header" id="41" type="messageHeader"/>
        <field name="Group Dimensions" id="1" type="groupSize" groupName="Group"/>
        <group name="Group" blockLength="16">
            <field name="F1" id="10" type="uint32" fixUsage="int"/>
            <field name="F2" id="11" type="uint64" fixUsage="int"/>
        </group>
    </message>

    <!-- blockLength set for message with data -->
    <message name="Message4" id="4" blockLength="64">
        <field name="header" id="41" type="messageHeader"/>
        <field type="length" name="EncryptedNewPasswordLen" id="1403" refId="1404"/>
        <data type="rawData" name="EncryptedNewPassword" id="1404"/>
    </message>
</messageSchema>
